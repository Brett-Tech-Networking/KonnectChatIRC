<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main content -->
    <RelativeLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:padding="8dp">

        <!-- Channel Switcher Button -->
        <ImageButton
            android:id="@+id/btnChannelSwitcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:scaleX="2"
            android:scaleY="2"
            android:layout_margin="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_switcher"
            android:contentDescription="Channel Switcher"
            app:tint="#FFFFFF" />

        <!-- Channel Name TextView -->
        <TextView
            android:id="@+id/ChannelName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Channel Name"
            android:textColor="#FDD835"
            android:textSize="10sp"
            android:textStyle="bold"
            android:layout_marginLeft="80dp"
            android:layout_alignParentTop="true"
            android:padding="12dp" />

        <!-- Current Nick TextView -->
        <TextView
            android:id="@+id/CurrentNick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Nick"
            android:textColor="#FDD835"
            android:textSize="10sp"
            android:textStyle="bold"
            android:layout_marginTop="-15dp"
            android:layout_marginLeft="85dp"
            android:layout_below="@id/ChannelName"
            android:padding="8dp" />

        <!-- Chat RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chatRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_above="@id/chatInputLayout"
            android:layout_below="@id/CurrentNick"
            android:background="#111111" />

        <!-- Chat Input Layout -->
        <RelativeLayout
            android:id="@+id/chatInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="0dp">

            <!-- Upload Button -->
            <ImageButton
                android:id="@+id/uploadButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_upload"
                android:contentDescription="Upload Image"
                app:tint="#FFFFFF"
                android:padding="8dp" />

            <!-- Chat EditText -->
            <EditText
                android:id="@+id/chatEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/uploadButton"
                android:layout_toStartOf="@id/sendButton"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/rounded_background"
                android:hint="Type a message"
                android:textColor="#FFFFFF"
                android:textColorHint="#AAAAAA"
                android:padding="12dp"
                android:inputType="text" />

            <!-- Send Button -->
            <ImageButton
                android:id="@+id/sendButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_send"
                android:contentDescription="Send Message"
                android:padding="8dp"
                app:tint="#FFFFFF" />
        </RelativeLayout>

        <!-- Admin Button -->
        <ImageButton
            android:id="@+id/adminButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="false"
            android:layout_toLeftOf="@id/btnUsers"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/admin_panel"
            android:scaleX="2"
            android:scaleY="2"
            android:layout_marginEnd="30dp"
            android:contentDescription="Admin Panel"
            android:padding="5dp"
            app:tint="#FFFFFF" />

        <!-- Users Button -->
        <ImageButton
            android:id="@+id/btnUsers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:scaleX="1.8"
            android:scaleY="1.8"
            android:layout_margin="8dp"
            android:paddingEnd="10dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_users"
            android:contentDescription="Users" />

        <!-- Disconnect Button -->
        <ImageButton
            android:id="@+id/disconnectButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/btnChannelSwitcher"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:contentDescription="Disconnect"
            app:tint="#FFFFFF"
            android:padding="6dp" />
    </RelativeLayout>

    <!-- Left drawer (Channel Switcher) -->
    <RelativeLayout
        android:id="@+id/left_drawer"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#222222"
        android:padding="16dp">

        <!-- Channel Switcher Title -->
        <TextView
            android:id="@+id/channelSwitcherTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Channels"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="8dp"
            android:layout_alignParentTop="true" />

        <!-- RecyclerView for Channel Switcher -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/channelRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/channelSwitcherTitle"
            android:paddingBottom="8dp"
            android:background="#333333" />
    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>
