<!-- operator_panel.xml -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/operatorPanel"
    android:layout_width="match_parent"
    android:layout_height="450dp"
    android:visibility="gone">

    <!-- Main Content Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_background"
        android:padding="10dp">

        <!-- Login Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login:"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginBottom="4dp"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnOperLogin"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="OPER Login"
                android:layout_margin="4dp"/>

            <Button
                android:id="@+id/btnOSLogin"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="OS Login"
                android:layout_margin="4dp"/>
        </LinearLayout>

        <!-- Server Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Server:"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginBottom="4dp"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnKill"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="KILL"
                android:layout_margin="4dp"/>

            <Button
                android:id="@+id/btnZline"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="ZLINE"
                android:layout_margin="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <Button
                android:id="@+id/btnShun"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="SHUN"
                android:layout_margin="4dp"/>

            <Button
                android:id="@+id/btnDefcon"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="DEFCON"
                android:layout_margin="4dp"/>
        </LinearLayout>

        <!-- User Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User:"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginBottom="4dp"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSajoin"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="SAJOIN"
                android:layout_margin="4dp"/>

            <Button
                android:id="@+id/btnSapart"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="SAPART"
                android:layout_margin="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <Button
                android:id="@+id/btnSvsnick"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="SVSNICK"
                android:layout_margin="4dp"/>

            <!-- Placeholder View for Alignment (to fill the second column) -->
            <View
                android:layout_width="140dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
